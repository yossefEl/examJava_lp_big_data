<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="191.0" prefWidth="414.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="employes.controllers.UpdateEmployeController">
    <children>
        <VBox layoutY="1.0" prefHeight="161.0" prefWidth="414.0">
            <children>
                <HBox prefHeight="30.0" prefWidth="200.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="106.0" text="Nom d'employe">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="oldEmployeName" prefHeight="30.0" prefWidth="259.0" promptText="AIr arabica" text="nouveau nom">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox layoutX="10.0" layoutY="30.0" prefHeight="30.0" prefWidth="200.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="106.0" text="Salaire d'employe">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="oldEmployeSalaire" prefHeight="30.0" prefWidth="259.0" promptText="Casablanca" text="nouveau salaire">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </HBox>
            <HBox layoutX="10.0" layoutY="65.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="106.0" text="ID de la societe">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="oldEmployeSocieteID" prefHeight="30.0" prefWidth="259.0" promptText="Casablanca" text="Nouvelle societe ">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="65.0" prefHeight="30.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#closeButtonAction" prefHeight="26.0" prefWidth="98.0" style="-fx-background-color: grey;" text="Annuler" textFill="WHITE">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="updateBtn" layoutX="306.0" layoutY="30.0" mnemonicParsing="false" onAction="#updateEmployeInfo" prefHeight="26.0" prefWidth="98.0" style="-fx-background-color: #64BB00;" text="Mettre a jour" textFill="WHITE">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
